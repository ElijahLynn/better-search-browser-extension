{
  "name": "better-search-browser-extension",
  "version": "0.1.0",
  "description": "Better Search Chrome extension providing regex-based in-page search with a configurable shortcut.",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "build": "tsup && node scripts/copy-static.mjs",
    "build:watch": "tsup --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "PLAYWRIGHT_BROWSERS_PATH=0 npx playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.0",
    "@types/chrome": "^0.0.249",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.4.0",
    "ts-node": "^10.9.2",
    "tsup": "^7.2.0",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  }
}
