{
  "manifest_version": 3,
  "name": "Better Search",
  "description": "Run regex-based searches on any page and highlight matches with a customizable shortcut.",
  "version": "0.1.0",
  "background": {
    "service_worker": "background/serviceWorker.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle the Better Search overlay"
    }
  },
  "action": {
    "default_title": "Better Search"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ]
}
