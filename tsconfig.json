{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2020"],
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["chrome", "node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "outDir": "dist"
  },
  "include": ["src", "tests", "tsup.config.ts", "vitest.config.ts", "playwright.config.ts"]
}
